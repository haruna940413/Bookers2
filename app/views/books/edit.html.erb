<div class="container">
  <p id="notice"></p>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <div id=“error_explanation”>
          <h5><%= @book.errors.count %>件のerrorが発生しました。</h5>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), local: true do |f|%>

          <div class="field row">
            <%= f.label :Title %><br>
            <%= f.text_field :title, autofocus: true, autocomplete: "name" ,class: "col-xs-12 book_title" %>
          </div>

          <div class="field row">
            <%= f.label :Opinion %><br>
            <%= f.text_field :body, autofocus: true, autocomplete: "body",class: "col-xs-12 book_body" %>
          </div>

          <div class="actions row">
            <%= f.submit "Update Book", class: "btn btn-primary col-xs-12"%>
          </div>

      <% end %>

    	<%= link_to "Show",book_path(@book.id) %>
    	<span>|</span>
    	<%= link_to "Back", books_path, class: "back" %>

    </div>
    <div class="col-md-3"></div>

    <div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>

  </div>
</div>