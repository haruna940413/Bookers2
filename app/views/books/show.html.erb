<div class="container">
  <div class="row">
　　<!--  @book=Book.find(params[:id]) @newbook=Book.new @user=@book.user @newcomment=Comment.new @comments = @book.comments -->
　　<!--左側-->

　　<%= render "users/list", user: @user, book: @newbook %>

　　<!--右側-->

    <div class="col-xs-9">
	  	<h2 style="margin-top: 0px;">Book detail</h2>
  	  	<table class="table table-hover table-inverse">
  	  	<thead></thead>
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
               <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg"%><br>
               <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title , book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <!--いいね実装部分（js）-->
            <td id="favorite_button_<%= @book.id %>"><%= render "favorites/favorites", book: @book %></td>
            <!--コメント数表示部分-->
            <td>コメント数：<%= @book.comments.count %></td>
　　　　　　<!--ログインユーザー時に編集・削除ボタン-->
            <% if user_signed_in? && @book.user_id == current_user.id %>
              <td><%= link_to "Edit" , edit_book_path(@book), class: "btn-sm btn-success" %></td>
              <td><%= link_to "Destroy" , book_path(@book.id), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>

        　</tr>
        </tbody>
      </table>

      <!--コメント-->
      <table>
        <thead></thead>
        <tbody>
         <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg"%><br />
              <%= @user.name%>
            </td>
            <td><%= comment.comment %></td>
            <% if user_signed_in? && comment.user_id == current_user.id %>
             <td><%= link_to "Destroy" , book_comment_path(@book.id, comment.id), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
            <br>
          </tr>
        </tbody>
        <% end %>
      </table>

      <!--コメント投稿フォーム-->

      <%= form_with(model:[@book, @newcomment], local: true) do |f| %>

      　<!--コメント投稿フォーム分エラー文-->

        <% if @newcomment.errors.any? %>
          <div id=“error_explanation”>
            <h5><%= @newcomment.errors.count %>件のerrorが発生しました。</h5>
            <ul>
              <% @newcomment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!--投稿フォーム-->

        <div class="row">
            <div class="col-xs-12">
              <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
            </div>
        </div>
        <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      <% end %>

    </div>
  </div>
</div>