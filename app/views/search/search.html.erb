<% if @users != nil %>

  <div class="col-lg-12">
    <h1>Users search for『<%= @word %>』</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg" %></td>
          <td><%= user.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% else %>

  　<div class="col-lg-12">
    <h1>Books search for 『<%= @word %>』</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>title</th>
          <th>opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg" %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
